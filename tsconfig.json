{
	"compilerOptions": {
		"target": "es6",
		"module": "es6",
		"moduleResolution": "node",
		"removeComments": true,
		"noImplicitAny": true,
		"outDir": "lib",
		"strict": true,
		"declaration": true,
		"declarationDir": "dist/",
		"typeRoots": [
			"dist/index.d.ts"
		]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "lib", "dist"]
}
